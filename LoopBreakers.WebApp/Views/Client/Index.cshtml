@model IEnumerable<UserDTO>

@{
    ViewData["Title"] = "Idex";
}

<h3>Clients</h3>

<p>
    <a class="btn btn-primary" asp-action="Create"><i class="bi bi-person-plus me-2"></i>Add New Client</a>
</p>
<hr />
<form class="row" method="post">
    <div class="col-auto">
        <label class="col-form-label">Search: </label>
    </div>
    <div class="col-auto">
        <input type="text" value="" name="SearchText" class="form-control" placeholder="">
    </div>
    <div class="col-auto">
        <button type="submit" class="btn btn-primary"><i class="bi bi-search me-2"></i>Search</button>
    </div>
</form>
<hr />
<div class="row">
    <div class="col" id="myGroup">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th></th>
                    <th>
                        @Html.DisplayNameFor(model => model.Id)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LastName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Company)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Balance)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Iban)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td data-bs-toggle="collapse" data-bs-target="#hiddenRow@(Html.DisplayFor(modelItem => item.Id))" class="accordion-toggle">
                            <a><i class="bi bi-chevron-double-down"></i></a>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LastName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Company)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Balance) @Html.DisplayFor(modelItem => item.Currency)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Iban)
                        </td>
                        <td>
                            <div class="btn-group-sm" role="group">
                                <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil"></i></a>
                                <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i></a>
                            </div>
                        </td>
                    </tr>

                    <tr>
                        <td colspan="12" class="hiddenRow">
                            <div class="accordian-body collapse" id="hiddenRow@(Html.DisplayFor(modelItem => item.Id))" data-bs-parent="#myGroup">
                                <table class="table table-striped">
                                    <thead>
                                        <tr class="info">
                                            <th>
                                                @Html.DisplayNameFor(model => model.Address)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Phone)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Age)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Gender)
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Address)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Phone)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Age)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Gender)
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                                <table class="table table-striped">
                                    <thead>
                                        <tr class="info">
                                            <th>
                                                @Html.DisplayNameFor(model => model.IdentityNumber)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Registered)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Created)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.IsActive)
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.IdentityNumber)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Registered)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Created)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.IsActive)
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
